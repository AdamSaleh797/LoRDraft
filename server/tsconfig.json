{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleSuffixes": [".tsx", ".mts", ".ts", ""],
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "../node_modules/*", "../common/*"]
    }
  },
  "exclude": ["./node_modules"]
}
