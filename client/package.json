{
  "name": "lordraft-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "format": "npx prettier --write .",
    "check-types": "tsc --noemit",
    "lint": "npx eslint src",
    "build-react": "npx webpack --mode production --progress --config webpack.config.js",
    "build-public": "cp -r public/* ../static/",
    "build": "npm run check-types && npm run build-react && npm run build-public && npm run lint"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
