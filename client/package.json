{
  "name": "lordraft-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "check-types": "tsc --noemit",
    "lint": "cd .. && npx eslint ./client",
    "build-react": "npx webpack --mode development --progress --config webpack.config.js",
    "build-public": "npx copyfiles --flat public/* ../static/",
    "build": "npm run check-types && npm run build-react && npm run build-public && npm run lint"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
